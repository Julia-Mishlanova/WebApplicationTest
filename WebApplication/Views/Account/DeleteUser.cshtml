@model ApplicationUser

<h2>Подтверждение удаления пользователя</h2>

<p>Вы уверены, что хотите удалить пользователя @Model.UserName?</p>

<form asp-controller="Account" asp-action="DeleteUser" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <button type="submit">Удалить</button>
    <a asp-action="Index" asp-controller="Home">Отмена</a>
</form>